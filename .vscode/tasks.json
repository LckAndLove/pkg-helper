{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "path/to/your/compiler/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-Ipath\\to\\your\\include",
                "-Ipath\\to\\your\\include\\opencv4",
                "-Lpath\\to\\your\\lib",
                "-lfmt",
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_features2d",
                "-lopencv_video",
                "-lopencv_face",
                "-lopencv_dnn",
                "-lopencv_ml",
                "-lopencv_objdetect",
                "-lopencv_calib3d",
                "-lopencv_plot",
                "-lopencv_tracking",
                "..."
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
